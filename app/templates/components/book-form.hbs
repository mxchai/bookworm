<h2>Add new book</h2>

<form {{action 'submit' on='submit'}}>
  {{!-- This handlebars expression for errors is probably built into DS.Errors or something --}}
  <div class="form-group {{if errors.title "has-error"}}">
    <label for="">Title</label>
    {{input class='form-control' value=book.title}}
    {{#each errors.title as |error|}}
      <span class="help-block">{{error.message}}</span>
    {{/each}}
  </div>
  <div class="form-group">
    <label for="">Author</label>
    {{input class='form-control' value=book.author}}
  </div>
  <div class="form-group">
    <label for="">Description</label>
    {{textarea class='form-control' value=book.description}}
  </div>
  <button class="btn btn-primary" type="submit">{{buttonLabel}}</button>
</form>